{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Image commands plugin manifest",
	"type": "object",
	"properties": {
		"plugins": {
			"type": "object",
			"properties": {
				"user_packages": {
					"type": "object",
					"properties": {
 						"repo": {
							"type": "array",
							"items": { "type": "string" }
						},
						"local": {
							"type": "array",
							"items": { "type": "string" }
						}
					}
				}
			},
			"required": ["user_packages"]
		}
	},
	"required": ["plugins"]
}
